<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week5Demo25.MainPage"
             xmlns:CustomZooControls="clr-namespace:Week5Demo25.Controls"
             xmlns:CustomZooContent="clr-namespace:Week5Demo25.Content"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Header Contnet HERE-->
        <CustomZooContent:Header Grid.Row="0"/>

        <!--Body Contnet HERE-->
        <CustomZooContent:Body Grid.Row="1" Grid.ColumnSpan="2"/>

        <!--Footer Contnet HERE-->
        <CustomZooContent:Footer Grid.Row="2" />
    </Grid>

</ContentPage>
